%li.mb-2
  .post.border.rounded-lg.p-2{ id: "post-#{post.id}" }
    .username= link_to post.user.username, user_path(post.user)
    .content= simple_format h(post.content)
    - if post.image.present?
      .image= link_to image_tag(post.image_url(:thumb)), post.image_url, target: :_blank
    .small
      %span= link_to "#{post.favorites_count} いいね", favorited_by_post_path(post)
      %span.timestamp= link_to post.created_at, post
