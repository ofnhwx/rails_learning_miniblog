- if flash.any?
  .row
    .col
      - flash.each do |message_type, messages|
        - messages.each do |message|
          %div{class: "alert alert-#{message_type}"}= message
.row
  .col-lg-4
    - if @post.errors.any?
      - @post.errors.full_messages.each do |msg|
        .alert.alert-danger= msg
    = form_for(@post) do |f|
      .field
        = f.text_area :content, class: 'w-100'
      .text-right
        = f.submit '投稿', class: 'btn btn-primary right'
  .col-lg-8
    - if @feeds.any?
      %ul.mt-2.mt-lg-0.p-0
        = render @feeds
      != pagy_bootstrap_nav(@pagy) if @pagy.pages > 1
